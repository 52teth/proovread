#!/bin/bash

# Author:
#         Simon Pfaff, simon.pfaff@stud-mail.uni-wuerzburg.de                                                                                                                                          
# Last Modified: Simon Pfaff, 2014-05-13                                                                                                                                                               
# Version 0.1 

#SeqChunker.chunk need Bash Version 4 or higher
#for Versions below 4, proovread uses Sed.only

VER=`bash --version | grep -Eo [0-9][.][0-9] | cut -d. -f1`

Bin="$(cd -- "$(dirname "$0")" && pwd)"

if [ "$VER" -ge 4 ]; then

    bash "$Bin/SeqChunker.chunk" $@

else

    bash "$Bin/SeqChunker.sed-only" $@

fi;